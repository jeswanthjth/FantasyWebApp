@page "{id:int}"
@model FantasyCricketApp.Pages.Players.DeleteModel
@{
    ViewData["Title"] = "Delete Player";
}

<h1>Delete Confirmation</h1>

<h3>Are you sure you want to remove this player?</h3>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Player.Name</dd>
    <dt class="col-sm-2">Team</dt>
    <dd class="col-sm-10">@Model.Player.Team</dd>
    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Player.Role</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Player.Price</dd>
</dl>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
